DIR="$HOME/.config/bspwm"
BSP="$HOME/.config/bspwm/themes"
rofi_command="rofi -theme $DIR/rofi/themes/themes.rasi"

# Themes
theme_1=" Juno"
theme_2=" Orchis"
theme_3=" Kripton"

# Variable passed to rofi
options="$theme_1\n$theme_2\n$theme_3"

chosen="$(echo -e "$options" | $rofi_command -p "Available themes : (3)" -dmenu -selected-row 0)"
case $chosen in
    $theme_1)
        bash ${BSP}/set-theme  '1.jpg' 'beach' 'Juno-mirage' 'Yaru' 'capitaine-cursors-light'
        ;;
    $theme_2)
        bash ${BSP}/set-theme  '2.jpg' 'gruvbox' 'Orchis-dark-compact' 'Flatery-Orange-Dark' 'capitaine-cursors-light'
        ;;
    $theme_3)
        bash ${BSP}/set-theme  '3.jpg' 'beach' 'Fluent-dark-compact' 'Fluent-orange-dark' 'capitaine-cursors-light'
        ;;
esac 
